<div class="card shadow-sm mb-4">
  <div class="card-body">
    <h5 class="card-title mb-3">Register for <%= event.name %></h5>

    <%= form_with model: [event, registration], local: true do |f| %>
      <% if registration.errors.any? %>
        <div class="alert alert-danger">
          <ul class="mb-0">
            <% registration.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :attendee_name, "Name", class: "form-label" %>
        <%= f.text_field :attendee_name, class: "form-control", placeholder: "Your full name" %>
      </div>

      <div class="mb-3">
        <%= f.label :attendee_email, "Email", class: "form-label" %>
        <%= f.email_field :attendee_email, class: "form-control", placeholder: "Your email address" %>
      </div>

      <div class="d-flex gap-2">
        <%= f.submit "Register", class: "btn btn-success" %>
        <%= link_to event_path(event), class: "btn btn-outline-secondary" do %>
          Cancel
        <% end %>
      </div>
    <% end %>
  </div>
</div>
