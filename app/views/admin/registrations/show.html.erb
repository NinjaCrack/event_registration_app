<div class="card shadow-sm mx-auto my-4" style="max-width: 500px;">
  <div class="card-body">

    <h3 class="card-title mb-4 text-center">Registration Details</h3>

    <ul class="list-group list-group-flush mb-4">
      <li class="list-group-item"><strong>Event:</strong> <%= @registration.event.name %></li>
      <li class="list-group-item"><strong>Attendee:</strong> <%= @registration.attendee_name %></li>
      <li class="list-group-item"><strong>Email:</strong> <%= @registration.attendee_email %></li>
      <li class="list-group-item"><strong>Registered At:</strong> <%= @registration.created_at.strftime("%B %d, %Y %H:%M") %></li>
    </ul>

    <div class="d-flex justify-content-between">
      <%= link_to edit_admin_registration_path(@registration), class: "btn btn-outline-primary" do %>
        <i class="fas fa-edit me-1"></i> Edit
      <% end %>

      <%= button_to admin_registration_path(@registration), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" do %>
        <i class="fas fa-trash-alt me-1"></i> Delete
      <% end %>

      <%= link_to admin_registrations_path, class: "btn btn-outline-secondary" do %>
        <i class="fas fa-arrow-left me-1"></i> Back
      <% end %>
    </div>

  </div>
</div>
