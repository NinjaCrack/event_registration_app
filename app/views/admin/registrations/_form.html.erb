<div class="card shadow-sm mb-4">
  <div class="card-body">
    <h3 class="card-title mb-3"><%= registration.new_record? ? "Register Attendee" : "Edit Registration" %></h3>

    <% if registration.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% registration.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: [registration.event, registration],
                  url: registration.new_record? ? admin_event_registrations_path(registration.event) : admin_event_registration_path(registration.event, registration),
                  method: registration.new_record? ? :post : :patch,
                  local: true do |f| %>

      <div class="mb-3">
        <%= f.label :attendee_name %>
        <%= f.text_field :attendee_name, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :attendee_email %>
        <%= f.email_field :attendee_email, class: "form-control" %>
      </div>

      <div class="d-flex gap-2 justify-content-end">
        <%= f.submit registration.new_record? ? "Register" : "Update", class: "btn btn-success" %>
        <% unless registration.new_record? %>
          <%= link_to "Cancel", admin_event_path(registration.event), class: "btn btn-outline-secondary" %>
        <% end %>
      </div>

    <% end %>
  </div>
</div>
