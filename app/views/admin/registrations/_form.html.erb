<%= form_with model: [:admin, @registration], local: true do |f| %>
  <% if @registration.errors.any? %>
    <div class="errors">
      <h4><%= pluralize(@registration.errors.count, "error") %> prevented saving:</h4>
      <ul>
        <% @registration.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :event_id, "Event" %>
    <%= f.collection_select :event_id, Event.all, :id, :name, prompt: "Select Event" %>
  </div>

  <div>
    <%= f.label :attendee_name %>
    <%= f.text_field :attendee_name %>
  </div>

  <div>
    <%= f.label :attendee_email %>
    <%= f.email_field :attendee_email %>
  </div>

  <div>
    <%= f.submit %>
    <%= link_to "Cancel", admin_registrations_path %>
  </div>
<% end %>
