<%= form_with model: @event, local: true do |f| %>
  <% if @event.errors.any? %>
    <div class="errors"><%= @event.errors.full_messages.join(", ") %></div>
  <% end %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit %>
    <%= link_to "Cancel", events_path %>
  </div>
<% end %>
